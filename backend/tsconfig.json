{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "rootDir": "./src",
      "outDir": "build",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "noErrorTruncation": true,
    },
    "include": ["src/**/*"]
  }
  